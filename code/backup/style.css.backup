#linkrow {
	color: white;
	margin-bottom: 2em;
}

#linkrow a{
	color: white;
}

body {
	background-color: black;
}

#searchContainer
{
	background-color: rgba(255, 0, 0, 0.2);
	padding-top: 15px;
	padding-bottom: 14px;
	/*padding-left: 10px;*/
	/*padding-right: 10px;*/
	height: 20px;
	vertical-align: middle;
}

#searchContainer label
{
	background-color: rgba(0, 0, 255, 0.9);
	font-size: 18px;
	font-weight: bold;
	float: left;

	padding-right: 10px;
}

#searchTxtWrapper
{
	background-color: rgba(0, 0, 255, 0.2);
	position: relative;
	top: -5px;

	/*trigger a block formatting context*/
	overflow:hidden;
	zoom: 1;

	/*float: left;*/
	/*width: 100%;*/

	/*padding-right: 13px;*/
	/* 5px border radius + 2*1px border width + 1px */
	/*padding-right: 20px;*/
}

#searchTxtWrapper input
{
	width: 100%;

	font-size: 16px;
	padding-left: 10px;
	/*margin-right: 10px;*/
	padding-top: 5px;
	padding-bottom: 5px;

	border: 1px solid grey;
	-webkit-border-radius: 15px; 
	-moz-border-radius: 15px 15px 15px 15px; 
	border-radius: 15px;
}


/*Home page links*/
#homeList
{
	margin-top: 10px;
	background-color: #fff;

	border: 1px solid #fff;
	-webkit-border-radius: 5px 5px 5px 5px; 
	-moz-border-radius: 5px 5px 5px 5px; 
	border-radius: 5px 5px 5px 5px; 
}

.homeItem
{
	height: 20px;
	/*background-color: red;*/
	font-size: 18px;

	padding-left: 8px;
	padding-right: 5px;
	padding-top: 8px;
	padding-bottom: 4px;

	border-bottom: 1px solid lightgrey;


	/*outline: 1px solid green;*/
}

.homeItem .homeName
{
	/*background-color: red;*/
	font-size: 16px;
	height: 18px;
	float: left;
	/*width: 190px;*/
	width: 235px;
	text-wrap: normal;

	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;

	font-weight: bold;

	/*outline: 1px solid blue;*/
}

.homeItem .homeLinkButton {
	background-image: url(http://m.cip.gatech.edu/~buzzit/base_widget/images/rightArrow.png);
	background-position: 50% 50%;
	background-repeat: no-repeat;
	float: right;
	position: relative;
	right: -33px;
	width: 15px;
}

